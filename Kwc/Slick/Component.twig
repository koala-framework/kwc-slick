<div class="{{ cssClass }}">
    <input type="hidden" value="{{ config|json_encode() }}" />
    <div class="{% if listItems|length > 1 %}listWrapper{% else %}imageWrapper{% endif %}">
        {% for child in listItems %}
        <div class="{{ child['class'] }}" style="{{ child['style'] }}">
            {{ renderer.component(child['data']) }}
        </div>
        {% endfor %}
    </div>
</div>